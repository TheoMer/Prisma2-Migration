{
    "compilerOptions": {
      /* Works for both Prisma 1 and 2 */
      "target": "es5",                          
      "module": "commonjs",                    
      "lib": ["es6"],                     
      "allowJs": true,
      "outDir": "dist",
      "noImplicitAny": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": true,
      "rootDir": "src",
      "noEmit": true,
      "typeRoots": ["node_modules/@types","types"],
      "plugins": [{ "name": "nexus/typescript-language-service" }]
    },
    "include": ["src/**/*", "src", "types.d.ts"]
}